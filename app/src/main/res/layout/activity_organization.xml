<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".HelpLineActivity">
    <include
        android:id="@+id/include"
        layout="@layout/layout_toolbar_for_non_home_activity"
        tools:layout_editor_absoluteX="-1dp"
        tools:layout_editor_absoluteY="45dp" />
    <TextView
        android:background="@drawable/button_background"
        android:backgroundTint="@color/teal_700"
        android:id="@+id/header"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        android:gravity="center"
        android:justificationMode="none"
        android:padding="15dp"
        android:textColor="@color/white"
        android:text="Blood Bank App"
        android:textSize="18sp"
        android:textStyle="bold"
       />

    <LinearLayout
        android:id="@+id/container1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_background"
        android:backgroundTint="#DDDDDD"
        android:elevation="10dp"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:text="রক্তকণিকা বাংলাদেশ" />

        <TextView
            android:id="@+id/one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/icon_phone_number"
            android:text="01701588215" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:drawableLeft="@drawable/ic_location"
            android:text="রাজশাহী" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/container2"
        android:backgroundTint="#DDDDDD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_background"
        android:elevation="10dp"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:text="জীবন্তু ব্লাড ব্যাংক" />

        <TextView
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/icon_phone_number"
            android:text="01852017143" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:drawableLeft="@drawable/ic_location"
            android:text="খুলনা" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/container3"
        android:backgroundTint="#DDDDDD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/button_background"
        android:elevation="10dp"
        android:orientation="vertical">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:text="যশোর রক্তদান সমিতি" />

        <TextView
            android:id="@+id/three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:drawableLeft="@drawable/icon_phone_number"
            android:text="01759810544" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="5dp"
            android:padding="8dp"
            android:drawableLeft="@drawable/ic_location"
            android:text="যশোর" />
    </LinearLayout>
    <TextView

        android:id="@+id/textView5"
        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="\nCopyright \u00a9 2022-23 | All right reserved"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />






</LinearLayout>