<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ActivityLayoutAAboutUS"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_AboutUs">

    <include
        android:id="@+id/include"
        layout="@layout/layout_toolbar_for_non_home_activity" />

    <TextView
        android:background="@drawable/button_background"
        android:backgroundTint="@color/teal_700"
        android:id="@+id/header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_marginTop="8dp"
        android:elevation="10dp"
        android:gravity="center"
        android:justificationMode="none"
        android:padding="15dp"
        android:textColor="@color/white"
        android:text="Blood Bank App"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/include" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:background="@drawable/background_about_us"
        android:elevation="5dp"
        android:justificationMode="inter_word"
        android:padding="16dp"
        android:text="The About Us Page is one of the most significant pages of a website.This About Us Page is a company introduction page for a blog or websites' visitors.It is one of the best options for visitors. Because when the visitors will come to your website they will know about your company or organization or your business policies.\n\nThis About Us Page Generator tool helps you to create customizable introductory content. Like the company's founder or internal information, year of establishment, when and where this business runs etc. This is an opportunity for your clients to introduce themselves and the form of business they do for his or her customers. Clicking faraway from the homepage, wherein it's far largest wanted for a fast view."
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/background_about_us"
        android:backgroundTint="#D0FF5E07"
        android:elevation="10dp"
        android:gravity="center"
        android:justificationMode="none"
        android:padding="15dp"
        android:text="Supervised by Monishanker Halder\nAssistant Professor of CSE,JUST"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="\nCopyright \u00a9 2022-23 | All right reserved"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintHorizontal_bias="0.462"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toBottomOf="@+id/textView3" />


</androidx.constraintlayout.widget.ConstraintLayout>